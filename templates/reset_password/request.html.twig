{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="auth-container">
        {{ form_start(requestForm, {'attr': {'class': 'auth-form'}}) }}
        <h1>Réinitialiser votre mot de passe</h1>

        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <div class="form-group">
            {{ form_widget(requestForm.email, {'attr': {'placeholder': 'Adresse mail'}}) }}
            <div>
                <small class="form-helper">
                    Entrez votre adresse mail et nous vous enverrons  un mail contenant les instructions pour la
                    réinitialisation de votre mot de passe.
                </small>
            </div>
        </div>


        <button class="btn-primary">Envoyer la demande de réinitialisation !</button>
        {{ form_end(requestForm) }}

        <div class="auth-drawing">
            <img src="{{ asset('img/svgs/auth.svg') }}" alt="4 personnes qui trinquent" />
        </div>
    </div>

{% endblock %}